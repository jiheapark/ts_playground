{
  "name": "ts_boilerplate",
  "version": "1.0.0",
  "description": "TypeScript Boilerplate",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf out dist",
    "build_tasks": "npm run clean && tsc --pretty -p src/tasks",
    "watch_tasks": "npm run build_tasks -- --watch",
    "build": "npm run build_tasks && grunt dist",
    "test": "test command",
    "serve": "npm run webpack-dev-server -- --config out/tasks/webpack.config.dev.js --hot --contentBase out/client",
    "webpack-dev-server": "node --max_old_space_size=4096 node_modules/webpack-dev-server/bin/webpack-dev-server.js",
    "build_server": "tsc -p src/server",
    "server": "npm run build_server && node out/server/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git"
  },
  "keywords": [
    "TypeScript",
    "boilerplate"
  ],
