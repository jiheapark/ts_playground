{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "../../out/client",
        "jsx": "react",
        "skipLibCheck": true,
        "types": [
        ],
        "baseUrl": ".",
        "paths": {
            "$lib/*": ["lib/*"],
            "*": [
                "local-types/*"
            ]
        },
        "lib": [
            "dom",
            "es2015"
        ],
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "node_modules/@types",
            "node_modules/",
            "./local-types"
        ]
    },
    "include": [
        "../common/config.d.ts",
        "./**/.config.ts",
        "./**/*"
    ],
    "exclude": [
        "../../node_modules",
        "../server",
        "../tasks"
    ]
}
